{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <!-- Page Header -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Jeux
                    <small>2016</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
            {% for project in projects %}
                {% if loop.index0 is divisible by(3)%}
                    <div class="row">
                {% endif %}
                <div class="col-md-4 portfolio-item">
                    <a href="#">
                        <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                    </a>
                    <h3>
                        <a href="{{ path('project_show', {project: project.id}) }}">{{ project.title }}</a>
                    </h3>
                    <p>{{ project.description|length > 200 ? project.description|slice(0, 200) ~ ' ...' : project.description  }}</p>
                </div>
                {% if loop.index is divisible by(3) or loop.last %}
                    </div>
                {% endif %}
            {% endfor %}
        <!-- /.row -->

        <hr>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
{% endblock %}

