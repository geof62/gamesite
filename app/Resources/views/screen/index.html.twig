{% extends 'base.html.twig' %}

{% block body %}
    <h1>Screen list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for screen in screens %}
            <tr>
                <td>{{ screen.id }}</td>
                <td>{{ screen.project.title }}</td>
                <td><img src="/uploads/{{ screen.path }}" /></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('screen_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}